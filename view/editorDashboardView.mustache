<style>
    .profile-pic {
        width: 80px;
        height: 80px;
        object-fit: cover;
    }
    .profile-icon {
        font-size: 80px;
    }
    @media (min-width: 768px) {
        .profile-pic {
            width: 128px;
            height: 128px;
        }
        .profile-icon {
            font-size: 128px;
        }
    }
</style>

<section class="d-flex align-items-center min-vh-100 py-5" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; background-position: center;">
    <div class="container bg-white bg-opacity-75 rounded-4 shadow-lg p-3 p-md-5 m-3 m-md-4">

        {{#usuario}}
            <div class="bg-light p-3 p-md-4 rounded-4 mb-5 shadow-sm d-flex flex-column flex-md-row align-items-center justify-content-between gap-4">
                <div class="d-flex align-items-center gap-3">
                    <i class="fas fa-pencil-alt fa-2x d-none d-sm-block"></i>
                    <h2 class="fw-bold mb-0 fs-4 fs-md-2">Panel de Editor</h2>
                </div>
                <div class="d-flex flex-column flex-sm-row align-items-center gap-3 gap-md-4">
                    <div class="text-center text-sm-end">
                        <h4 class="fw-semibold mb-1 fs-5">{{nombre_completo}}</h4>
                        <p class="mb-1 text-muted">{{mail}}</p>
                        <small class="text-secondary">{{ciudad}}, {{pais}}</small>
                    </div>
                    <div class="mt-3 mt-sm-0">
                        {{#foto_perfil}}
                            <img src="/QuizGame/public/uploads/{{foto_perfil}}" alt="Foto de perfil"
                                 class="rounded-circle img-fluid border border-2 profile-pic">
                        {{/foto_perfil}}
                        {{^foto_perfil}}
                            <i class="fa fa-user-circle text-secondary profile-icon"></i>
                        {{/foto_perfil}}
                    </div>
                </div>
            </div>
        {{/usuario}}

        <div class="row text-center gy-4">
            <div class="col-sm-6">
                <a href="/QuizGame/question/showSuggested" class="btn btn-outline-primary w-100 py-3 py-md-4 rounded-4 shadow-sm fs-6 fs-md-5 d-flex flex-column h-100 justify-content-center">
                    <i class="fas fa-check-circle fa-2x fa-md-3x mb-2 d-block"></i>
                    Sugerencias pendientes
                </a>
            </div>
            <div class="col-sm-6">
                <a href="/QuizGame/question/reported" class="btn btn-outline-danger w-100 py-3 py-md-4 rounded-4 shadow-sm fs-6 fs-md-5 d-flex flex-column h-100 justify-content-center">
                    <i class="fas fa-flag fa-2x fa-md-3x mb-2 d-block"></i>
                    Preguntas reportadas
                </a>
            </div>
            <div class="col-sm-6">
                <a href="/QuizGame/question/create" class="btn btn-outline-success w-100 py-3 py-md-4 rounded-4 shadow-sm fs-6 fs-md-5 d-flex flex-column h-100 justify-content-center">
                    <i class="fas fa-plus-circle fa-2x fa-md-3x mb-2 d-block"></i>
                    Crear pregunta
                </a>
            </div>
            <div class="col-sm-6">
                <a href="/QuizGame/question/all" class="btn btn-outline-secondary w-100 py-3 py-md-4 rounded-4 shadow-sm fs-6 fs-md-5 d-flex flex-column h-100 justify-content-center">
                    <i class="fas fa-list fa-2x fa-md-3x mb-2 d-block"></i>
                    Ver todas
                </a>
            </div>
        </div>

    </div>
</section>