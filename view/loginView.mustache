<div class="d-flex justify-content-center align-items-center min-vh-100 p-3" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; >
    
    <div class="col-11 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="w-100 d-flex justify-content-center align-items-center p-4" style="background-color: rgba(0, 0, 0, 0.3);">
                <img src="../../QuizGame/public/img/QuizGame.png" alt="Logo" class="img-fluid" style="max-width: 250px;">
            </div>

            <div class="bg-white p-4 p-md-5">
                <h2 class="text-center mb-4 fs-3">Iniciar sesión</h2>

                {{#errors}}
                    <div class="alert alert-danger py-2 px-3 mb-3" role="alert">{{.}}</div>
                {{/errors}}

                <form action="/QuizGame/login/processLogin" method="POST" autocomplete="off">
                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre de usuario</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Ingresa tu usuario" required>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a href="/QuizGame/register" class="text-decoration-none text-primary">¿No tenés cuenta? Registrate acá</a>
                </div>
            </div>
        </div>
    </div>
</div>