<section>
    {{#datos}}
    <div class="d-flex flex-column min-vh-100 position-relative p-3" style="background-color: {{category.color}};">
        <div class="position-absolute top-0 start-0 w-100 h-100" style="background-image: url('../../QuizGame/public/img/question-background.png'); background-size: cover; background-position: center; opacity: 0.7;"></div>
        
        <div class="container z-1 d-flex flex-grow-1 align-items-center justify-content-center py-4">
            <div class="row w-100 justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-header bg-transparent border-bottom p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0 fw-bold fs-6">Quiz Game! ðŸ¤“</h5>
                                <span class="badge fs-6 p-2 fs-sm-5 p-sm-3 rounded-pill fw-bold" style="background-color: {{category.color}}; color: white;">{{category.nombre}}</span>
                            </div>
                        </div>
                        
                        <div class="card-body p-3 p-md-5 text-center">
                            <div class="mb-4"><span class="badge bg-dark text-white fs-4 p-3 rounded-pill shadow-sm" id="timer">00:30</span></div>
                            <form id="question-form" method="POST" action="/QuizGame/game/responderPregunta">
                                <input type="hidden" name="idQuestion" value="{{question.id}}">
                                <p class="question-text lead mb-4 fw-bold fs-4 fs-md-2">{{question.texto}}</p>
                                <div class="row g-3 justify-content-center">
                                    {{#answers}}
                                    <div class="col-12 col-md-6 d-grid">
                                        <button type="submit" name="respuesta" value="{{id}}" class="btn btn-outline-primary btn-lg text-start text-wrap">{{texto}}</button>
                                    </div>
                                    {{/answers}}
                                </div>
                            </form>
                        </div>

                        <div class="card-footer bg-transparent p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/QuizGame/question/reportar?id={{question.id}}" class="btn btn-outline-danger btn-sm"><i class="fas fa-flag"></i> Reportar</a>
                                <div class="text-center bg-info text-white rounded-3 px-3 py-1 shadow-sm">
                                    <h6 class="mb-0 small">Puntaje Actual</h6>
                                    <p class="mb-0 fs-5 fw-bold">{{puntaje}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/datos}}

    {{#mensaje}}<p style="color: red;">{{mensaje}}</p>{{/mensaje}}

    <script>window.initialTimerValue = {{tiempo_restante}};</script>
    <script src="/QuizGame/public/js/timer.js"></script>
</section>