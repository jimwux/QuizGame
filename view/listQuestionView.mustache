<section class="py-5 min-vh-100" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; background-position: center;">
    <div class="container my-4">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-dark text-white text-center rounded-top-4 p-3">
                <h3 class="mb-0 fs-4">Listado de Preguntas</h3>
            </div>
            <div class="card-body bg-white rounded-bottom-4 p-3 p-md-4">

                {{#alerta}}
                    <div class="alert alert-success alert-dismissible fade show text-center fw-semibold fs-5" role="alert">
                        {{alerta}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                {{/alerta}}

                <div class="row g-2 mb-4">
                    <div class="col-12 col-md-4 col-lg-3">
                        <a href="/QuizGame/question/create" class="btn btn-success w-100 py-2">
                            <i class="fa-solid fa-plus me-1"></i> Crear Pregunta
                        </a>
                    </div>
                    <div class="col-12 col-md-8 col-lg-9">
                        <form method="GET" action="/QuizGame/question/all">
                            <div class="input-group">
                                <input type="text" name="buscar" class="form-control" placeholder="Buscar pregunta por texto..." value="{{textoBusqueda}}">
                                <button class="btn btn-outline-secondary" type="submit">
                                    <i class="fa fa-search"></i> <span class="d-none d-sm-inline ms-1">Buscar</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="d-block d-lg-none text-center small text-secondary mb-2">
                    <i class="fas fa-arrows-alt-h me-2"></i> Desliza la tabla para ver más
                </div>

                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle shadow-sm rounded-4 overflow-hidden">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th style="min-width: 250px;">Enunciado</th>
                                <th class="text-center">Categoría</th>
                                <th class="text-center">Dificultad</th>
                                <th style="min-width: 200px;">Respuestas</th>
                                <th class="text-center">Estado</th>
                                <th class="text-center" style="min-width: 120px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#preguntas}}
                            <tr>
                                <td><span class="badge bg-dark">{{id_pregunta}}</span></td>
                                <td class="text-break">{{texto_pregunta}}</td>
                                <td class="text-center text-white fw-bold" style="background-color: {{color_categoria}};">{{nombre_categoria}}</td>
                                <td class="text-center">{{nombre_dificultad}}</td>
                                <td>
                                    <ul class="mb-0 ps-3">
                                        {{#respuestas}}
                                            <li class="{{#es_correcta}}fw-bold text-success{{/es_correcta}}">
                                                {{texto}} {{#es_correcta}}<i class="fas fa-check ms-1"></i>{{/es_correcta}}
                                            </li>
                                        {{/respuestas}}
                                    </ul>
                                </td>
                                <td class="text-center">{{estado_pregunta}}</td>
                                <td class="text-center">
                                    <a href="/QuizGame/question/edit?id={{id_pregunta}}" class="btn btn-outline-primary btn-sm m-1">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="/QuizGame/question/delete?id={{id_pregunta}}" class="btn btn-outline-danger btn-sm m-1"
                                       onclick="return confirm('¿Estás seguro de que quieres eliminar esta pregunta?');">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/preguntas}}
                        {{^preguntas}}
                            <tr>
                                <td colspan="7" class="text-center text-muted p-4">
                                    {{#textoBusqueda}}
                                        No se encontraron preguntas con "<strong>{{textoBusqueda}}</strong>".
                                    {{/textoBusqueda}}
                                    {{^textoBusqueda}}
                                        No hay preguntas para mostrar.
                                    {{/textoBusqueda}}
                                </td>
                            </tr>
                        {{/preguntas}}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>