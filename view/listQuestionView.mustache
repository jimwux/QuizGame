<section class="bg-light py-5" style="
    background: url('../../QuizGame/public/img/background.png')">
    <div class="container mt-5">
        <div class="card shadow rounded-4">
            <div class="card-header bg-dark text-white text-center rounded-top-4 p-4">
                <h3 class="mb-0">Listado de Preguntas</h3>
            </div>
            <div class="card-body bg-white rounded-bottom-4 p-4">

                {{#alerta}}
                    <div class="alert alert-success alert-dismissible fade show text-center fw-semibold fs-5" role="alert">
                        {{alerta}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                    </div>
                {{/alerta}}

                <div class="d-flex flex-row">
                    <div class="text-left col-md-3">
                        <a href="/QuizGame/question/create" class="btn btn-success px-4 col-md-11"><i class="fa-solid fa-plus me-2"></i> Crear Nueva Pregunta</a>
                    </div>

                    <!-- Buscador -->
                    <div  class="col-md-9">
                        <form class="mb-4" method="GET" action="/QuizGame/question/all">
                            <div class="input-group">
                                <input type="text" name="buscar" class="form-control" placeholder="Buscar pregunta por texto..."
                                       value="{{textoBusqueda}}">
                                <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-secondary">
                            <tr>
                                <th>ID</th>
                                <th>Enunciado</th>
                                <th>Categoría</th>
                                <th>Dificultad</th>
                                <th>Respuestas</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#preguntas}}
                                <tr>
                                    <td>{{id_pregunta}}</td>
                                    <td>{{texto_pregunta}}</td>
                                    <td style="background-color: {{color_categoria}}; color: white;">{{nombre_categoria}}</td>
                                    <td>{{nombre_dificultad}}</td>
                                    <td>
                                        <ul class="mb-0">
                                            {{#respuestas}}
                                                <li class="{{#es_correcta}}fw-bold text-success{{/es_correcta}}">
                                                    {{texto}} {{#es_correcta}}(Correcta){{/es_correcta}}
                                                </li>
                                            {{/respuestas}}
                                        </ul>
                                    </td>
                                    <td>{{estado_pregunta}}</td>
                                    <td class="text-center">
                                        <a href="/QuizGame/question/edit?id={{id_pregunta}}" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                                        <a href="/QuizGame/question/delete?id={{id_pregunta}}" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar esta pregunta?');">Eliminar</a>
                                    </td>
                                </tr>
                            {{/preguntas}}
                            {{^preguntas}}
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        {{#textoBusqueda}}
                                            No se encontraron preguntas relacionadas con la búsqueda: "<strong>{{textoBusqueda}}</strong>"
                                        {{/textoBusqueda}}
                                        {{^textoBusqueda}}
                                            No hay preguntas activas para mostrar
                                        {{/textoBusqueda}}
                                    </td>
                                </tr>
                            {{/preguntas}}
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
</section>
