<body class="w3-light-grey">

<div class="container my-4 bg-white rounded shadow-sm p-4  mt-5">

    {{#user}}
        <!-- Datos del perfil -->
        <div class="row align-items-center mb-4">
            <div class="col-md-4">
                <p class="mb-1 fw-bold">Usuario: {{usuario}}</p>
                <small>{{año_nacimiento}} - {{sexo}}</small>
            </div>
            <div class="col-md-5 text-md-end">
                <p class="fw-bold mb-0">{{nombre_completo}}</p>
                <p class="mb-0">{{mail}}</p>
                <small>{{ciudad}}, {{pais}}</small>
            </div>
            <div class="col-md-3 text-md-end text-center mt-3 mt-md-0">
                {{#foto_perfil}}
                    <img src="{{foto_perfil}}" alt="Foto de perfil" class="rounded-circle" style="width: 64px; height: 64px; object-fit: cover;">
                {{/foto_perfil}}
                {{^foto_perfil}}
                    <i class="fa fa-user-circle fa-4x text-secondary"></i>
                {{/foto_perfil}}
            </div>
        </div>
    {{/user}}

    <!-- Partidas jugadas -->
    <h5 class="fw-bold mb-3">Partidas jugadas</h5>

    <div class="row">
        <div class="col-md-6">
            {{#partidas}}
                <div class="d-flex align-items-center bg-light rounded p-2 mb-2">
                    <i class="fa fa-user-circle fa-2x text-muted me-3"></i>
                    <div class="flex-grow-1">
                        <div>Preguntas: <strong>{{preguntas}}</strong></div>
                        <div>Puntaje obtenido: <strong>{{puntaje}} pts</strong></div>
                        <div>Destacado en:
                            <span class="badge text-bg-light border border-1 ms-1">
                <i class="fa fa-trophy me-1"></i>
                <span class="text-{{categoria_color}}">{{categoria}}</span>
              </span>
                        </div>
                    </div>
                </div>
            {{/partidas}}
        </div>

        <!-- Mapa + ubicación -->

        <div class="col-md-6">
            <label for="country" class="form-label">País <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="country" name="country" placeholder="País" required readonly />
        </div>

        <div class="col-md-6">
            <label for="city" class="form-label">Ciudad (seleccione en el mapa) <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="city" name="city" placeholder="Ciudad" required readonly />
        </div>

        <div class="col-md-12" id="map"></div>
    </div>

</div>
<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script src="/QuizGame/public/js/register.js"></script>