<section class="w3-light-grey d-flex justify-content-center align-items-center min-vh-100">

<div class="container my-4 bg-white rounded shadow-sm p-4 mt-5">

    {{#user}}
        <!-- Datos del perfil -->
        <div class="row align-items-center mb-4 text-center text-md-start">
            <div class="col-12 col-md-4 mb-3 mb-md-0">
                <p class="mb-1 fw-bold fs-5">Usuario: {{usuario}}</p>
                <small class="fs-6">{{año_nacimiento}} - {{sexo}}</small>
            </div>
            <div class="col-12 col-md-5 mb-3 mb-md-0 text-right">
                <p class="fw-bold mb-1 fs-5">{{nombre_completo}}</p>
                <p class="mb-1 fs-6">{{mail}}</p>
                <small class="fs-6">{{ciudad}}, {{pais}}</small>
            </div>
            <!-- Imagen de perfil -->
            <div class="col-12 col-md-3 d-flex justify-content-center justify-content-md-end">
                {{#foto_perfil}}
                    <img src="/QuizGame/public/uploads/{{foto_perfil}}" alt="Foto de perfil"
                         class="rounded-circle img-fluid"
                         style="width: 128px; height: 128px; object-fit: cover;">
                {{/foto_perfil}}
                {{^foto_perfil}}
                    <i class="fa fa-user-circle text-secondary" style="font-size: 128px;"></i>
                {{/foto_perfil}}
            </div>

        </div>
    {{/user}}

    <!-- Partidas jugadas -->
    <h5 class="fw-bold mb-3 fs-4 text-center text-md-start">Partidas jugadas</h5>
    <div class="row">
        <div class="col-md-6">
            {{#partidas}}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div
                                class="d-flex justify-content-center align-items-center mx-3"
                                style="width: 50px; height: 50px;"
                        >
                            <img src="/QuizGame/public/img/icono_preguntas.png" alt="partida" style="width: 100%; height: 100%; object-fit: contain;">
                        </div>
                        <div class="d-flex flex-grow-1 justify-content-around fw-semibold">
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Preguntas correctas</div>
                                <div>{{cantidad_correctas}}</div>
                            </div>
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Puntaje obtenido</div>
                                <div>{{puntaje}} pts</div>
                            </div>
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Destacado en</div>
                                <div>
                                    {{#nombre_categoria}}
                                        <span class="badge text-capitalize" style="background-color: {{color_categoria}}; font-size: 1rem;">
                                            {{nombre_categoria}}
                                        </span>
                                    {{/nombre_categoria}}
                                    {{^nombre_categoria}}
                                        <span class="badge bg-secondary text-capitalize" style="font-size: 1rem;">
                                          Sin categoría destacada
                                        </span>
                                    {{/nombre_categoria}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/partidas}}
        </div>

        <!-- Mapa (ubicación) -->
        <div class="col-md-6">
            {{#user}}
                <div id="map"
                     data-lat="{{latitud}}"
                     data-lng="{{longitud}}"
                     style="width: 100%; height: 320px; border-radius: 12px; overflow: hidden; margin: 0">
                </div>
            {{/user}}
        </div>
    </div>

</div>
</section>

<!-- Leaflet CSS y JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Script del mapa -->
<script src="/QuizGame/public/js/profile.js" defer></script>
