<body class="w3-light-grey">

<div class="container my-4 bg-white rounded shadow-sm p-4 mt-5">

    {{#user}}
        <!-- Datos del perfil -->
        <div class="row align-items-center mb-4">
            <div class="col-md-4">
                <p class="mb-1 fw-bold">Usuario: {{usuario}}</p>
                <small>{{año_nacimiento}} - {{sexo}}</small>
            </div>
            <div class="col-md-5 text-md-end">
                <p class="fw-bold mb-0">{{nombre_completo}}</p>
                <p class="mb-0">{{mail}}</p>
                <small>{{ciudad}}, {{pais}}</small>
            </div>
            <div class="col-md-3 text-md-end text-center mt-3 mt-md-0">
                {{#foto_perfil}}
                    <img src="{{foto_perfil}}" alt="Foto de perfil" class="rounded-circle" style="width: 64px; height: 64px; object-fit: cover;">
                {{/foto_perfil}}
                {{^foto_perfil}}
                    <i class="fa fa-user-circle fa-4x text-secondary"></i>
                {{/foto_perfil}}
            </div>
        </div>
    {{/user}}

    <!-- Partidas jugadas -->
    <h5 class="fw-bold mb-3">Partidas jugadas</h5>
    <div class="row">
        <div class="col-md-6">
            {{#partidas}}
                <div class="d-flex align-items-center bg-light rounded p-2 mb-2">
                    <i class="fa fa-user-circle fa-2x text-muted me-3"></i>
                    <div class="flex-grow-1">
                        <div>Preguntas: <strong>{{preguntas}}</strong></div>
                        <div>Puntaje obtenido: <strong>{{puntaje}} pts</strong></div>
                        <div>Destacado en:
                            <span class="badge text-bg-light border border-1 ms-1">
                            <i class="fa fa-trophy me-1"></i>
                            <span class="text-{{categoria_color}}">{{categoria}}</span>
                        </span>
                        </div>
                    </div>
                </div>
            {{/partidas}}
        </div>

        <!-- Mapa (ubicación) -->
        <div class="col-md-6">
            <div id="map"
                 data-ubicacion="{{ciudad}}, {{pais}}"
                 style="width: 100%; height: 300px; border-radius: 12px; overflow: hidden;">
            </div>
        </div>
    </div>

</div>

<!-- Leaflet CSS y JS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Script del mapa -->
<script src="/QuizGame/public/js/profile.js" defer></script>