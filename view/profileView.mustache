<section class="position-relative d-flex justify-content-center align-items-center min-vh-100"
         style="background: url('../../QuizGame/public/img/background.png')">
    <div class="container p-2 p-md-4 my-4 bg-white shadow-sm mt-5 border-0 rounded-4">

        {{#user}}
            <!-- Datos del perfil -->
            <div class="row align-items-center mb-4 text-center text-md-start p-2 p-md-4 gy-3">
                <div class="col-12 col-md-4 mb-2 mb-md-0">
                    <p class="mb-1 fw-bold fs-5">Usuario: {{usuario}}</p>
                    <small class="fs-6">{{año_nacimiento}} - {{sexo}}</small>
                </div>
                <div class="col-12 col-md-5 mb-2 mb-md-0">
                    <p class="fw-bold mb-1 fs-5">{{nombre_completo}}</p>
                    <p class="mb-1 fs-6">{{mail}}</p>
                    <small class="fs-6">{{ciudad}}, {{pais}}</small>
                </div>
                <div class="col-12 col-md-3 d-flex justify-content-center justify-content-md-end">

                        <img src='/QuizGame/profile/generateQR?username={{usuario}}' style="width: 128px; height: 128px; object-fit: cover;" class="pe-2" alt='QR de {{usuario}}'>
                      {{#foto_perfil}}
                        <img src="/QuizGame/public/uploads/{{foto_perfil}}" alt="Foto de perfil"
                             class="rounded-circle img-fluid"
                             style="width: 128px; height: 128px; object-fit: cover;">
                    {{/foto_perfil}}
                    {{^foto_perfil}}
                        <i class="fa fa-user-circle text-secondary" style="font-size: 128px;"></i>
                    {{/foto_perfil}}
                </div>
            </div>
        {{/user}}

        {{#es_jugador}}
            <h5 class="fw-bold mb-3 fs-4 text-center text-md-start ps-md-4">Partidas recientes</h5>
            <div class="row p-2 p-md-4 pt-0">
                <!-- Partidas -->
                <div class="col-12 col-md-6 d-flex flex-column justify-content-between gap-3">
                    {{#partidas}}
                        <div class="card shadow-sm d-flex flex-row justify-content-around rounded-3 mb-2 m-lg-0">
                            <div class="card-body d-flex align-items-center gap-3">
                                <div class="d-flex justify-content-center align-items-center mx-3" style="width: 50px; height: 50px;">
                                    <img src="../../QuizGame/public/img/icono_preguntas.png" alt="partida" style="width: 100%; height: 100%; object-fit: contain;">
                                </div>
                                <div class="d-flex flex-grow-1 justify-content-around fw-semibold">
                                    <div class="text-center">
                                        <div class="text-muted">Preguntas correctas</div>
                                        <div>{{cantidad_correctas}}</div>
                                    </div>
                                    <div class="text-center">
                                        <div class="text-muted">Puntaje obtenido</div>
                                        <div>{{puntaje}} pts</div>
                                    </div>
                                    <div class="text-center">
                                        <div class="text-muted">Destacado en</div>
                                        <div>
                                            {{#nombre_categoria}}
                                                <span class="badge text-capitalize" style="background-color: {{color_categoria}}; font-size: 1rem;">
                                                    {{nombre_categoria}}
                                                </span>
                                            {{/nombre_categoria}}
                                            {{^nombre_categoria}}
                                                <span class="badge bg-secondary text-capitalize" style="font-size: 1rem;">
                                              Sin categoría destacada
                                            </span>
                                            {{/nombre_categoria}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/partidas}}
                </div>
                <!-- Mapa -->
                <div class="col-12 col-md-6 mt-3 mt-md-0 d-flex">
                    {{#user}}
                        <div class="col-12 mt-md-0 d-flex">
                            <div id="map-profile"
                                 data-lat="{{latitud}}"
                                 data-lng="{{longitud}}"
                                 class="w-100 rounded-4"
                                 style="min-height: 250px; width: 100%">
                            </div>
                        </div>
                    {{/user}}
                </div>
            </div>
        {{/es_jugador}}

        {{^es_jugador}}
            <div class="row">
                <div class="col-12">
                    {{#user}}
                        <div id="map-profile"
                             data-lat="{{latitud}}"
                             data-lng="{{longitud}}"
                             class="w-100 rounded-4"
                             style="min-height: 250px; height: 300px;">
                        </div>
                    {{/user}}
                </div>
            </div>
        {{/es_jugador}}

    </div>
</section>


<!-- Leaflet CSS y JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<!-- Script del mapa -->
<script src="/QuizGame/public/js/profile.js" defer></script>
