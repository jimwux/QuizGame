<section class="min-vh-100" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; background-position: center;">

    <div class="container d-flex flex-column justify-content-center py-4">

        {{#alerta}}
        <div class="row w-100 mb-3 justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="alert alert-success alert-dismissible fade show text-center fw-semibold fs-5 w-100" role="alert" id="alerta">
                    {{alerta}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            </div>
        </div>
        {{/alerta}}

        <div class="row justify-content-center w-100 mb-4">
            <div class="col-8 col-sm-6 col-md-5 col-lg-4">
                 <img src="../../QuizGame/public/img/QuizGame.png" alt="Logo" class="img-fluid">
            </div>
        </div>

        <main class="row w-100">
            <aside class="col-12 col-lg-4 order-1 order-lg-2 mb-4 mb-lg-0">
                <div class="d-grid gap-3">
                    <a href="/QuizGame/ranking" class="btn btn-light p-3 d-flex align-items-center justify-content-center gap-3 fw-bold shadow-sm rounded-3 fs-5">
                        <i class="fas fa-ranking-star fa-lg"></i>
                        <span>Ranking</span>
                    </a>
                    <a href="/QuizGame/question/formularioSugerirPregunta" class="btn btn-light p-3 d-flex align-items-center justify-content-center gap-3 fw-bold shadow-sm rounded-3 fs-5">
                        <i class="fas fa-circle-question fa-lg"></i>
                        <span>Sugerir pregunta</span>
                    </a>
                    <a href="/QuizGame/game/iniciarPartida" class="btn btn-primary p-3 d-flex align-items-center justify-content-center gap-3 fw-bold shadow-sm rounded-3 fs-5">
                        <i class="fas fa-gamepad fa-lg"></i>
                        <span>Crear nueva partida</span>
                    </a>
                </div>
            </aside>

            <section class="col-12 col-lg-8 order-2 order-lg-1">
                <h2 class="mb-3 fs-4 text-white">Tus últimas partidas</h2>
                <div class="d-grid gap-3">
                    {{#partidas}}
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-3">
                           <div class="row align-items-center text-center gy-3">
                               <div class="col-12 col-sm-2">
                                   <img src="../../QuizGame/public/img/icono_preguntas.png" alt="partida" style="width: 50px; height: 50px; object-fit: contain;">
                               </div>
                               <div class="col-12 col-sm-10">
                                   <div class="row align-items-center">
                                       <div class="col-12 col-md-4 mb-2 mb-md-0">
                                           <div class="text-muted small">Correctas</div>
                                           <div class="fw-bold">{{cantidad_correctas}}</div>
                                       </div>
                                       <div class="col-12 col-md-4 mb-2 mb-md-0">
                                            <div class="text-muted small">Puntaje</div>
                                            <div class="fw-bold">{{puntaje}} pts</div>
                                       </div>
                                       <div class="col-12 col-md-4">
                                           <div class="text-muted small">Destacado</div>
                                            <div>
                                                {{#nombre_categoria}}
                                                <span class="badge text-capitalize fs-6" style="background-color: {{color_categoria}};">{{nombre_categoria}}</span>
                                                {{/nombre_categoria}}
                                                {{^nombre_categoria}}
                                                <span class="badge bg-secondary text-capitalize fs-6">N/A</span>
                                                {{/nombre_categoria}}
                                            </div>
                                       </div>
                                   </div>
                               </div>
                           </div>
                        </div>
                    </div>
                    {{/partidas}}
                    {{^partidas}}
                        <div class="card"><div class="card-body text-center text-muted">Aún no has jugado ninguna partida. ¡Crea una nueva para empezar!</div></div>
                    {{/partidas}}
                </div>
            </section>
        </main>
    </div>
</section>

<script>
    setTimeout(() => {
        const alerta = document.getElementById("alerta");
        if (alerta) {
            // Usa el método de instancia de Bootstrap para cerrar la alerta
            const bsAlert = new bootstrap.Alert(alerta);
            bsAlert.close();
        }
    }, 4000); // Oculta después de 4 segundos
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>