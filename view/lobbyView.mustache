<div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center py-4">
    <div
            class="bg-secondary bg-gradient rounded-3 d-flex align-items-center justify-content-center mb-4 w-100"
            style="height: 250px;"
    >
        <span class="fs-4 fw-bold text-dark">Algún dibujito lindo</span>
    </div>

    <main class="row w-100">
        <!-- Partidas -->
        <h2 class="mb-3">Tus últimas partidas</h2>

        <section class="col-lg-8">
            {{#partidas}}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex align-items-center gap-3">
                        <div
                                class="d-flex justify-content-center align-items-center mx-3"
                                style="width: 50px; height: 50px;"
                        >
                            <img src="/QuizGame/public/img/icono_preguntas.png" alt="partida" style="width: 100%; height: 100%; object-fit: contain;">
                        </div>
                        <div class="d-flex flex-grow-1 justify-content-around fw-semibold">
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Preguntas correctas</div>
                                <div>{{cantidad_correctas}}</div>
                            </div>
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Puntaje obtenido</div>
                                <div>{{puntaje}} pts</div>
                            </div>
                            <div class="text-center">
                                <div class="text-muted" style="font-weight: normal;">Destacado en</div>
                                <div>
                                    {{#nombre_categoria}}
                                        <span class="badge text-capitalize" style="background-color: {{color_categoria}}; font-size: 1rem;">
                                            {{nombre_categoria}}
                                        </span>
                                    {{/nombre_categoria}}
                                    {{^nombre_categoria}}
                                        <span class="badge bg-secondary text-capitalize" style="font-size: 1rem;">
                                          Sin categoría destacada
                                        </span>
                                    {{/nombre_categoria}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/partidas}}

            {{#errors}}
                <div class="alert alert-danger">
                    <ul class="list-unstyled mb-0">
                        {{#.}}
                            <li>{{.}}</li>
                        {{/.}}
                    </ul>
                </div>
            {{/errors}}
       </section>

        <!-- Botones -->
        <aside class="col-lg-4">
            <div class="row g-3">
                <div class="col-md-6 d-flex">
                    <a
                            class="btn btn-secondary d-flex flex-column justify-content-center align-items-center gap-2 w-100 fw-bold"
                            style="height: 180px;"
                    >
                        <i class="fas fa-ranking-star fa-2x fs-1"></i>
                        <span>Ranking</span>
                    </a>
                </div>
                <div class="col-md-6 d-flex">
                    <a
                            class="btn btn-secondary d-flex flex-column justify-content-center align-items-center gap-2 w-100 fw-bold"
                            style="height: 180px;"
                    >
                        <i class="fas fa-circle-question fa-2x fs-1"></i>
                        <span>Sugerir pregunta</span>
                    </a>
                </div>
                <div class="col-12 d-flex">
                    <a href="/QuizGame/game/createGame"
                            class="btn btn-warning d-flex flex-column justify-content-center align-items-center gap-2 w-100 fw-bold fs-4"
                            style="height: 180px;"
                    >
                        <i class="fas fa-gamepad fa-3x"></i>
                        <span>Crear nueva partida</span>
                    </a>
                </div>
            </div>
        </aside>


    </main>
</div>
