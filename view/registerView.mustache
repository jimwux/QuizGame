<section class="py-5 d-flex justify-content-center align-items-center min-vh-100" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; background-position: center;">
  <div class="container">
    <div class="row g-0 shadow-lg rounded-4 overflow-hidden">
      <div class="col-12 col-lg-4 d-none d-lg-flex flex-column justify-content-center align-items-center p-4 p-md-5 text-center" style="background-color: rgba(0, 0, 0, 0.4);">
        <h3 class="mb-4 text-white display-6">Bienvenido a</h3>
        <img src="../../QuizGame/public/img/QuizGame.png" alt="Logo" class="img-fluid" style="max-width: 200px;" />
      </div>

      <div class="col-12 col-lg-8 bg-white p-3 p-md-5" style="max-height: 90vh; overflow-y: auto;">
        <h2 class="h3 mb-3">Registro</h2>
        <p class="fs-6 fw-normal text-secondary mb-4">
            ¿Ya tenés cuenta? <a href="/QuizGame/login" class="link-primary text-decoration-none">Iniciar sesión</a>
        </p>
        
        {{#errors}}
        <div class="alert alert-danger"><ul class="list-unstyled mb-0">{{#.}}<li>{{.}}</li>{{/.}}</ul></div>
        {{/errors}}

        <form id="registerForm" enctype="multipart/form-data" method="POST" action="/QuizGame/register/processRegisterForm">
          <div class="row g-3">
            <div class="col-12 col-md-6"><label for="fullName" class="form-label">Nombre completo <span class="text-danger">*</span></label><input type="text" class="form-control" id="fullName" name="fullName" required /></div>
            <div class="col-12 col-md-6"><label for="birthYear" class="form-label">Año de nacimiento <span class="text-danger">*</span></label><select class="form-select" id="birthYear" name="birthYear" required><option value="">Seleccione año</option></select></div>
            <div class="col-12"><label for="gender" class="form-label">Sexo</label><select class="form-select" id="gender" name="gender" required><option value="">Seleccione una opción</option><option value="Masculino">Masculino</option><option value="Femenino">Femenino</option><option value="Prefiero no cargarlo">Prefiero no cargarlo</option></select></div>
            <div class="col-12 col-md-6"><label for="country" class="form-label">País <span class="text-danger">*</span></label><input type="text" class="form-control" id="country" name="country" placeholder="País" required readonly /></div>
            <div class="col-12 col-md-6"><label for="city" class="form-label">Ciudad <span class="text-danger">*</span></label><input type="text" class="form-control" id="city" name="city" placeholder="Seleccione en el mapa" required readonly /></div>
            <div class="col-12"><div id="map" style="height: 250px;" class="rounded"></div><input type="hidden" id="latitude" name="latitude" /><input type="hidden" id="longitude" name="longitude" /></div>
            <div class="col-12 col-md-6"><label for="email" class="form-label">Correo electrónico <span class="text-danger">*</span></label><input type="email" class="form-control" id="email" name="email" required /><div id="emailFeedback" class="form-text text-danger"></div></div>
            <div class="col-12 col-md-6"><label for="username" class="form-label">Nombre de usuario <span class="text-danger">*</span></label><input type="text" class="form-control" id="username" name="username" required /><div id="usernameFeedback" class="form-text text-danger"></div></div>
            <div class="col-12 col-md-6"><label for="password" class="form-label">Contraseña <span class="text-danger">*</span></label><input type="password" class="form-control" id="password" name="password" required minlength="6" /></div>
            <div class="col-12 col-md-6"><label for="confirmPassword" class="form-label">Repetir contraseña <span class="text-danger">*</span></label><input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" /></div>
            <div class="col-12"><label for="profilePhoto" class="form-label">Foto de perfil</label><input class="form-control" type="file" id="profilePhoto" name="profilePhoto" accept="image/*" /></div>
            <div class="col-12 d-grid"><button type="submit" class="btn btn-primary btn-lg">Registrarse</button></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script src="/QuizGame/public/js/register.js"></script>