<section class="d-flex flex-column justify-content-center align-items-center min-vh-100 py-5" style="background: url('../../QuizGame/public/img/background.png'); background-size: cover; background-position: center;">
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-11 col-lg-10">
                <div class="card shadow-lg rounded-4">
                    <div class="card-header bg-info text-white text-center rounded-top-4 p-3">
                        <h3 class="mb-0 fs-4">{{boton}} Pregunta</h3>
                    </div>
                    <div class="card-body bg-white rounded-bottom-4 p-3 p-lg-5">

                        {{#errores}}
                            <div class="alert alert-danger">
                                <ul class="mb-0 list-unstyled">
                                    {{#.}}
                                        <li>{{{.}}}</li>
                                    {{/.}}
                                </ul>
                            </div>
                        {{/errores}}

                        <form method="POST" action="{{accion}}" class="fs-6 fs-md-5">

                            {{#pregunta.id}}
                                <input type="hidden" name="id_pregunta" value="{{pregunta.id}}">
                            {{/pregunta.id}}

                            <div class="mb-4">
                                <label for="texto" class="form-label fw-bold">Enunciado de la pregunta</label>
                                <textarea name="texto" id="texto" class="form-control" rows="3" required>{{pregunta.texto}}{{formulario.texto}}</textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Opciones</label>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <input type="text" name="opcionA" value="{{pregunta.opcionA}}{{formulario.opcionA}}" class="form-control" placeholder="Opción A" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="opcionB" value="{{pregunta.opcionB}}{{formulario.opcionB}}" class="form-control" placeholder="Opción B" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="opcionC" value="{{pregunta.opcionC}}{{formulario.opcionC}}" class="form-control" placeholder="Opción C" required>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" name="opcionD" value="{{pregunta.opcionD}}{{formulario.opcionD}}" class="form-control" placeholder="Opción D" required>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label d-block fw-bold">¿Cuál es la opción correcta?</label>
                                <div class="form-check form-check-inline">
                                    <input type="radio" name="correcta" value="A" class="form-check-input" {{#pregunta.checkedA}}checked{{/pregunta.checkedA}} {{#formulario.checkedA}}checked{{/formulario.checkedA}} required>
                                    <label class="form-check-label">A</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" name="correcta" value="B" class="form-check-input" {{#pregunta.checkedB}}checked{{/pregunta.checkedB}} {{#formulario.checkedB}}checked{{/formulario.checkedB}}>
                                    <label class="form-check-label">B</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" name="correcta" value="C" class="form-check-input" {{#pregunta.checkedC}}checked{{/pregunta.checkedC}} {{#formulario.checkedC}}checked{{/formulario.checkedC}}>
                                    <label class="form-check-label">C</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" name="correcta" value="D" class="form-check-input" {{#pregunta.checkedD}}checked{{/pregunta.checkedD}} {{#formulario.checkedD}}checked{{/formulario.checkedD}}>
                                    <label class="form-check-label">D</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="categoria" class="form-label fw-bold">Categoría</label>
                                    <select name="categoria" id="categoria" class="form-select" required>
                                        <option value="">Seleccione una categoría</option>
                                        {{#categorias}}
                                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{nombre}}</option>
                                        {{/categorias}}
                                    </select>
                                </div>
                                <div class="col-md-6 mb-4">
                                     <label class="form-label d-block fw-bold">Estado de la Pregunta</label>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" name="estado" value="activa" class="form-check-input"
                                            {{#pregunta.estado_activa}}checked{{/pregunta.estado_activa}}>
                                        <label class="form-check-label">Activa</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input type="radio" name="estado" value="inactiva" class="form-check-input"
                                            {{^pregunta.estado_activa}}checked{{/pregunta.estado_activa}}>
                                        <label class="form-check-label">Inactiva</label>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <a href="/QuizGame/question/all" class="btn btn-secondary px-4 py-2">Cancelar</a>
                                <button type="submit" class="btn btn-primary px-4 py-2">{{boton}}</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>