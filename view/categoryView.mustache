<section class="d-flex flex-column justify-content-center align-items-center" style="height: 100vh; background-color: {{categoria.color}};">

    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background-image: url('../../QuizGame/public/img/question-background.png'); background-size: cover; background-position: center; opacity: 0.7;">
    </div>


    <h2 class="mb-4 text-white">¡Categoría seleccionada!</h2>

    <div class="card shadow mx-auto" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h3>{{categoria.nombre}}</h3>
            <p>Prepárate para responder preguntas de esta categoría.</p>
            <form method="POST" action="/QuizGame/game/mostrarPregunta">
                <input type="hidden" name="categoria_id" value="{{categoria.id}}">
                <button type="submit" class="btn btn-light mt-3">Comenzar</button>
            </form>
        </div>
    </div>
</section>
